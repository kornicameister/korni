{
  "name": "src.kornicameister.github.io",
  "homepage": "http://kornicameister.github.io/korni",
  "version": "0.2.12",
  "private": true,
  "engines": {
    "node": "10.13.0",
    "npm": "6.4.1"
  },
  "scripts": {
    "start": "concurrently \"elm-app start\" \"npm run watch-css\"",
    "build": "npm run build-css && elm-app build",
    "test": "elm-app test",
    "eject": "elm-app eject",
    "lint": "elm-format --validate src tests && prettier --list-different '**/*.*'",
    "prettier": "prettier --write --config .prettierrc 'src/*.js'",
    "build-css": "node-sass-chokidar --output-style compressed --include-path node_modules/ src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path node_modules/ src/ -o src/ --watch"
  },
  "dependencies": {
    "create-elm-app": "3.0.0",
    "node-sass-chokidar": "^1.3.4",
    "normalize.css": "^8.0.1"
  },
  "devDependencies": {
    "concurrently": "^4.0.1",
    "prettier": "^1.14.3",
    "elm-format": "0.8.1",
    "webpack": "^4.25.1"
  }
}
