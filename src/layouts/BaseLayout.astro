---
interface Props {
  title: string;
  version?: string;
}

const { title, version = '1.0.0' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href={`${import.meta.env.BASE_URL}/favicon.ico`} />
    <title>{title}</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" />
  </head>
  <body>
    <slot />
    <footer class="footer">
      <strong>{version}</strong>
      <img src="https://github.com/kornicameister/korni/actions/workflows/deploy.yml/badge.svg" alt="Deploy" />
    </footer>
  </body>
</html>

<style is:global>
  :root {
    --primary-color: #333;
    --secondary-color: #666;
    --accent-color: #e74c3c;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    line-height: 1.6;
    color: var(--primary-color);
    background: #f5f5f5;
  }

  .footer {
    text-align: center;
    padding: 2rem;
    background: white;
    border-top: 1px solid #eee;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
  }

  .footer img {
    height: 20px;
  }
</style>
